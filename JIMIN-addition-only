#include<stdio.h>
int main()
{
int a,b,c,i=0,j;
while(i<1)
{
printf("enter your first number");
scanf(" %d ", &a);
printf("enter second number");
scanf("%d", &b);
c=a+b;
printf("SUM=%d",c);
if(i<1)
{
printf("enter 1 if want to continue");
scanf("%d",&j);
if(j!=1)
{
break;
}
}
else
break;
}
printf("thankyou");
return 0;
}
